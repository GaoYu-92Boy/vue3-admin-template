{
  "name": "vue3-element-admin",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --force --host --mode localhost",
    "preview": "vite preview",
    "build:prod": "vite build --mode production",
    "deploy": "sh deploy.sh",
    "eslint": "eslint  --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "eslint-lint": "eslint --ext .vue,.js,.ts,.jsx,.tsx --fix .",
    "prettier": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "prettier-lint": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\" .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@toast-ui/vue-editor": "^3.2.3",
    "@vueuse/core": "^10.11.1",
    "axios": "^1.7.9",
    "clipboard": "^2.0.11",
    "dom-to-image": "^2.6.0",
    "echarts": "^5.6.0",
    "element-plus": "^2.9.3",
    "file-saver": "^2.0.5",
    "fuse.js": "^6.6.2",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "path-to-regexp": "^6.3.0",
    "pinia": "^2.3.1",
    "qrcode.vue": "^3.6.0",
    "screenfull": "^6.0.2",
    "uuid": "^9.0.1",
    "vue": "^3.5.13",
    "vue-echarts": "^6.7.3",
    "vue-i18n": "^9.14.2",
    "vue-router": "^4.5.0",
    "vuedraggable": "^4.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "fast-glob": "^3.3.3",
    "husky": "^8.0.3",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.8",
    "sass": "^1.83.4",
    "script-loader": "^0.7.2",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^5.4.14",
    "vite-plugin-inspect": "^0.7.42",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "npm run eslint"
    ],
    "*.{html,vue,ts,js,json,md}": [
      "npm run prettier"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
