    "prettier": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "prettier-lint": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\" ."
  },
  "dependencies": {
    "@toast-ui/vue-editor": "^3.2.2",
    "axios": "^1.4.0",
    "clipboard": "^2.0.11",
    "dom-to-image": "^2.6.0",
    "element-plus": "^2.3.9",
    "file-saver": "^2.0.5",
    "fuse.js": "^6.6.2",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "path-to-regexp": "^6.2.1",
    "pinia": "^2.1.6",
    "qrcode.vue": "^3.4.1",
    "screenfull": "^6.0.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.0",
